<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#000000">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/app_logo_alt"
        android:paddingBottom="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appIdeaNameField"
        android:layout_gravity="center_horizontal"
        android:hint="App Name"
        android:singleLine="true"
        android:inputType="textCapWords"
        android:background="#111111"
        android:textColorHint="#333333"
        android:textColor="#cccccc"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/appDueDateField"
        android:layout_gravity="center_horizontal"
        android:hint="Due Date"
        android:background="#171717"
        android:textColorHint="#333333"
        android:textColor="#cccccc"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textMultiLine"
        android:ems="10"
        android:id="@+id/appDescriptionField"
        android:layout_gravity="center_horizontal"
        android:hint="Description"
        android:background="#1D1D1D"
        android:textColorHint="#333333"
        android:textColor="#cccccc"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/priority"
        android:layout_gravity="center_horizontal"
        android:progress="5"
        android:max="10"
        android:longClickable="false"
        android:progressDrawable="@drawable/appideastoragedark_scrubber_progress_horizontal_holo_light"
        android:thumb="@drawable/appideastoragedark_scrubber_control_selector_holo_light"
        />

    <Button
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:text="@string/addAppIdeaButtonText"
        android:id="@+id/addAppIdeaButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:enabled="false"
        android:background="@drawable/appideastoragedark_btn_default_holo_light"
        android:textColor="#00baff"
        />

    <Button
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:text="@string/goToListButtonText"
        android:id="@+id/goToListButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:enabled="true"
        android:background="@drawable/appideastoragedark_btn_default_holo_light"
        android:textColor="#00baff"
        />

</LinearLayout>
